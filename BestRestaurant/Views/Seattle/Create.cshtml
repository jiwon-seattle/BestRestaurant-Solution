@{
    Layout = "_Layout";
}

@model BestRestaurant.Models.Seattle

<h3>Add a new area</h3>
@using (Html.BeginForm())
{
    <h3>@Html.LabelFor(model => model.AreaName)</h3>
    <h3>@Html.TextBoxFor(model => model.AreaName)</h3>
    <br>
    <input class="btn btn-primary" type="submit" value="Add a new restaurant">
}

<p class="link">@Html.ActionLink("Show all restaurants", "Index")</p>

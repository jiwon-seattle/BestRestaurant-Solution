@{
    Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Seattle>;

<div class="container">
@if(Model.Count == 0)
{
    <h3>No Area have been added yet.</h3>
}

else
{
    @foreach(Seattle seattle in Model)
    {
        <h3 class="link">@Html.ActionLink($"{seattle.AreaName}", "Details", new {id = seattle.SeattleId})</h3>
    }
}
<br>
<br>

<p class="link">@Html.ActionLink("Add new area", "Create")</p>
</div>
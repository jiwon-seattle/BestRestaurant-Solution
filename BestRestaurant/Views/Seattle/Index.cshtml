@{
    Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Seattle>;

<div class="seattleIndex">

    <h1>List of Areas in Seattle</h1>

    @if (TempData.ContainsKey("ErrorMessage"))  {
    <h3>Error message: "@TempData["ErrorMessage"]"</h3>
    }
    @if(Model.Count == 0)
    {
        <h3>No Area have been added yet.</h3>
    }

    else
    {
        <div id="listOfAreas">
        @foreach(Seattle seattle in Model)
        {
            <h3>@Html.ActionLink($"{seattle.AreaName}", "Details", new {id = seattle.SeattleId})</h3>
        }
        </div>
    }
<p>@Html.ActionLink("Add new area", "Create")</p>
</div>
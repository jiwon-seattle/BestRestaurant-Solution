@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

  <h1>Restaurants in @ViewBag.AreaName</h1>

  @if (Model.Count == 0)
  {
    <h3>No restaurant has been added in this area yet</h3>
  }

  <ul>
    @foreach(Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.RestaurantName}", "Details", "Restaurants", new { id = restaurant.RestaurantName}) </li>
    }
  </ul>

  <p>@Html.ActionLink("Back to Area", "Index")</p>
@{
    Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine

<h2>Edit this Cuisine : @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CuisineId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Restaurant)
    @Html.DropDownList("RestaurantId")

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    <input class="btn btn-primay" value="Save">
}

<p>@Html.ActionLink("Back to list", "Index")</p>
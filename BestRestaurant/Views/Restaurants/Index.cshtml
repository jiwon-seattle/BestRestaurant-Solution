@{
    Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Cuisines<h1>

@if (Model.Count == 0)
{
    <h3>No cuisines have been added yet!</h3>
}

<ul>
@foreach (Restaurant restaurant in Model)
{
    <li class="link">@Html.ActionLink($"{restaurant.RestaurantName}", "Details", new {id = restaurant.RestaurantId}) | @restaurant.Seattle.AreaName </li>
}
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
@{
    Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<div class="restaurantIndex">

<h1>Restaurant<h1>

@if (TempData.ContainsKey("ErrorMessage"))
{
    <h3>Error message: "@TempData["ErrorMessage"]"</h3>
}
@if (Model.Count == 0)
{
    <h3>No restaurant has been added yet!</h3>
}

<div id="restaurantIndexList">
    <ul>
    @foreach (Restaurant restaurant in Model)
    {
        <h3>@Html.ActionLink($"{@restaurant.Location }", "Details", new {id = restaurant.RestaurantId}) </h3> 
    }
    </ul>
</div>
<p style="font-size:15px;">@Html.ActionLink("Add new restaurant", "Create")</p>

</div>
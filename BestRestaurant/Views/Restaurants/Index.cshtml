@{
    Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<div class="container">
<br>
<br>
<h1>Restaurant<h1>

@if (Model.Count == 0)
{
    <h3>No restaurant has been added yet!</h3>
}

<ul>
@foreach (Restaurant restaurant in Model)
{
    <li class="link">@Html.ActionLink($"{@restaurant.Seattle.AreaName }", "Details", new {id = restaurant.RestaurantId}) </li>
}
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p></p>
</div>
@{
    Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

@using BestRestaurant.Models;
@using List<BestRestaurant.Models.Restaurant>;

@if(Model.Count == 0)
{
    <h3>No Restaurants have been added yet.</h3>
}

<ul>
    @foreach(Restaurant restaurant in Model)
    {
        <li class="link">@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId)</li>
    }
</ul>

<p class="link">@Html.ActionLink("Add new restaurants", "Create")</p>
